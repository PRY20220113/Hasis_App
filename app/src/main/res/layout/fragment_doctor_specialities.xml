<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintTop_toBottomOf="@id/etSeleccione"
            app:layout_constraintStart_toStartOf="@id/etSeleccione"
            app:layout_constraintEnd_toEndOf="@id/guidelineV90"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineV10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineV90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <EditText
            android:id="@+id/etBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guidelineV10"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Bienvenido"/>

        <EditText
            android:id="@+id/etSeleccione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etBienvenido"
            app:layout_constraintStart_toStartOf="@id/etBienvenido"
            android:text="Seleccione una especialidad"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/specialitiesContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            tools:listitem="@layout/item_speciality"
            app:layout_constraintTop_toBottomOf="@id/etSeleccione"
            app:layout_constraintStart_toStartOf="@id/etSeleccione"
            app:layout_constraintEnd_toEndOf="@id/guidelineV90"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>